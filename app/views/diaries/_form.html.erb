<div class = "container">
  <div class = "pagination-centered">

<%= form_for @diary, remote: true,:html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :title, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :title, order: [:day, :month, :year], :class => 'datetime_select' %>
      <br>
      <br>  
    </div>
  </div>


  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :rows => '8' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil,id: "submit_link", remote: true, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                diaries_path, :class => 'btn' %>
  </div>
</div>
</div>
  

<% end %>
